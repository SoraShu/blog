---
import { getCollection, render } from "astro:content";
import PostLayout from "@/layouts/PostLayout.astro";
import LanguageNotice from "@/components/LanguageNotice.astro";
import { parsePostId, getAlternatePostId } from "@/i18n";

const locale = 'en';

export async function getStaticPaths() {
  const allPosts = await getCollection("blog", ({ data }) => !data.draft);
  
  // 为每个基础 ID 生成路径
  const baseIds = new Set<string>();
  allPosts.forEach((post) => {
    const { baseId } = parsePostId(post.id);
    baseIds.add(baseId);
  });
  
  return Array.from(baseIds).map((baseId) => ({
    params: { id: baseId },
    props: { baseId, allPosts },
  }));
}

const { baseId, allPosts } = Astro.props;

// 查找英文版本和中文版本
const enPostId = `${baseId}_en`;
const zhPostId = baseId;

const enPost = allPosts.find((p: any) => p.id === enPostId);
const zhPost = allPosts.find((p: any) => p.id === zhPostId);

// 优先显示英文版本，如果没有则显示中文版本
const post = enPost || zhPost;
const hasAlternate = !!zhPost && !!enPost;
const showingOriginal = !enPost && !!zhPost;

// 确定要显示的内容
const displayPost = post!;
const alternateUrl = `/posts/${zhPostId}`;

const { Content, headings } = await render(displayPost);
---

<PostLayout frontmatter={displayPost.data} headings={headings} locale={locale}>
  {(hasAlternate || showingOriginal) && (
    <LanguageNotice
      locale={locale}
      hasAlternate={hasAlternate}
      alternateUrl={alternateUrl}
      alternateLocale="zh-CN"
      showingFallback={showingOriginal}
    />
  )}
  <Content />
</PostLayout>
