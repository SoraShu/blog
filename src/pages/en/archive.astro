---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { Badge } from "@/components/ui/badge";
import { getCollection } from "astro:content";
import { formatDateShort } from "@/lib/utils";
import { t, parsePostId } from "@/i18n";

const locale = 'en';

// 获取所有非草稿博文
const allPosts = await getCollection("blog", ({ data }) => !data.draft);

// 创建博文 ID 映射（基础 ID -> 最佳版本）- 优先英文
const postMap = new Map<string, typeof allPosts[0]>();
allPosts.forEach((post) => {
  const { baseId, locale: postLocale } = parsePostId(post.id);
  const existing = postMap.get(baseId);
  
  if (!existing) {
    postMap.set(baseId, post);
  } else if (postLocale === 'en') {
    postMap.set(baseId, post);
  }
});

const posts = Array.from(postMap.values())
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Group posts by year
const postsByYear = posts.reduce(
  (acc, post) => {
    const year = post.data.pubDate.getFullYear();
    if (!acc[year]) {
      acc[year] = [];
    }
    acc[year].push(post);
    return acc;
  },
  {} as Record<number, typeof posts>
);

const years = Object.keys(postsByYear)
  .map(Number)
  .sort((a, b) => b - a);
---

<BaseLayout title={t('page.archive.title', locale)} description={t('page.archive.description', locale)} locale={locale}>
  <div class="max-w-3xl mx-auto">
    <h1 class="text-4xl font-bold mb-4 text-center">{t('page.archive.title', locale)}</h1>
    <p class="text-center text-muted-foreground mb-8">
      {t('archive.postsCount', locale, { count: posts.length })}
    </p>

    <div class="space-y-12">
      {
        years.map((year) => (
          <section>
            <h2 class="text-2xl font-bold mb-6 sticky top-16 bg-background py-2 border-b">
              {year}
              <span class="text-muted-foreground font-normal text-lg ml-2">
                ({postsByYear[year].length})
              </span>
            </h2>

            <ul class="space-y-4">
              {postsByYear[year].map((post) => {
                const { baseId, locale: postLocale } = parsePostId(post.id);
                const href = postLocale === 'en' ? `/en/posts/${baseId}` : `/en/posts/${post.id}`;
                return (
                  <li class="flex flex-col sm:flex-row sm:items-center gap-2 sm:gap-4 group">
                    <time
                      datetime={post.data.pubDate.toISOString()}
                      class="text-sm text-muted-foreground shrink-0 font-mono"
                    >
                      {formatDateShort(post.data.pubDate)}
                    </time>
                    <a
                      href={href}
                      class="font-medium hover:text-primary transition-colors group-hover:underline underline-offset-4"
                    >
                      {post.data.title}
                    </a>
                    {post.data.tags && post.data.tags.length > 0 && (
                      <div class="flex gap-1 flex-wrap">
                        {post.data.tags.slice(0, 2).map((tag) => (
                          <Badge variant="outline" className="text-xs">
                            {tag}
                          </Badge>
                        ))}
                      </div>
                    )}
                  </li>
                );
              })}
            </ul>
          </section>
        ))
      }
    </div>
  </div>
</BaseLayout>
